                    <input class="form-check-input" asp-for="NiskaKolicina" /> @Html.DisplayNameFor(model => model.NiskaKolicina)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RokIsteka15Dana" /> @Html.DisplayNameFor(model => model.RokIsteka15Dana)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RokIsteka30Dana" /> @Html.DisplayNameFor(model => model.RokIsteka30Dana)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Napomena" class="control-label"></label>
                <input asp-for="Napomena" class="form-control" />
